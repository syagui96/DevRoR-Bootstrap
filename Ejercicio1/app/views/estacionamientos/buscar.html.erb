				<div class="form-group">
					<label for="tip_est">Distrito</label>
					<style>
						select:invalid { color: gray; }
					</style>
					<select class="form-control" type="text" name="cboDist_estb">
							<option value="nil" disabled selected hidden>Seleccione Distrito</option>
							<option value="Lince">Lince</option>
							<option value="San Miguel">San Miguel</option>
							<option value="Miraflores">Miraflores</option>
							<option value="San Isidro">San Isidro</option>
							<option value="La Molina">La Molina</option>
							<option value="Surco">Surco</option>
					</select>
				</div>
			</div>	
			<div class="col-md-4">
					<div class="form-group">
						<label for="cboUbicacion_est">Ubicacion</label>
						<style>
							select:invalid { color: gray; }
						</style>
						<select class="form-control" type="text" name="cboUbicacion_estb">
								<option value="nil" disabled selected hidden>Seleccione Ubicacion</option>
								<option value="Interior">Interior</option>
								<option value="Exterior">Exterior</option>
								<option value="Azotea">Azotea</option>
								<option value="Sotano">Sotano</option>
								<option value="Otro">Otro</option>
						</select>
					</div>
			   	  </div>
