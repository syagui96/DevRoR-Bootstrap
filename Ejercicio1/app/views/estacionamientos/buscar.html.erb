<table class="table table-striped table-bordered table-hover dataTables-example" id="tablaEstac">
	<thead>
		<tr>
			<th>#</th>
			<th>Descripción</th>
			<th>Direccion</th>
			<th>Tipo</th>
			<th>Distrito</th>
			<th>Precio</th>
			<th>Ubicación</th>
		</tr>
	</thead>
	<tbody>
		<% if @estac != nil && @estac != ""
			@estac.each do |p| %>
		<tr class="gradeU">
			<td><%=p.IdEstac%></td>
			<td><%=p.DescrpEstac%></td>
			<td><%=p.DirecEstac%></td>
			<td><%=p.TipoEst%></td>
			<td><%=p.DistEstac%></td>
			<td><%=p.PrecxHorEstac%></td>
			<td><%=p.UbicEstac%></td>
		</tr>
		<% end end %>
	</tbody>
</table>

